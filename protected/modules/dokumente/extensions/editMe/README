<?php
//Example without model
$this->widget('ext.editMe.widgets.ExtEditMe', array(
    'name'=>'example',
    'value'=>'',
    'optionName'=>'optionValue',
));
 
//Example with model
$this->widget('ext.editMe.widgets.ExtEditMe', array(
    'model'=>$modelInstance,
    'attribute'=>'example',
    'optionName'=>'optionValue',
));